@article{Tan2017Dependence,
  title={Dependence changes between the carbon price and its fundamentals: A quantile regression approach},
  author={Tan, Xue Ping and Wang, Xin Yu},
  journal={Applied Energy},
  volume={190},
  pages={306-325},
  year={2017},
 keywords={Quantile regression;Structural breaks;Non-linear dependence;Carbon price;EU ETS},
 abstract={This paper focuses on the quantile-based dependence and influence path between European Union allowance (EUA) and its drivers (energy prices and macroeconomic risk factors) during the three phases of the European Union Emissions Trading Scheme (EU ETS). Meanwhile, the quantile-based dependence changes sourced from exogenous shocks are explored as well. Our empirical evidences suggest that: (i) the reaction of fluctuation in carbon price in relation to its drivers across its conditional distribution in different phases is highly heterogeneous; (ii) production restrain effect→aggregated demand effect→substitution effect, the evolution pattern of influence paths from Phase I to Phase III exists in the prices of both coal and gas, whereas, the evolution pattern of oil price is substitution effect→production restrain effect→production restrain effect; (iii) for the macroeconomic risk factors, differing with the nearly stable energy price path in Phase I, the unstable industrial production paths are explored during Phase II and Phase III; (iv) the significant dependence changes caused by three structural breaks are confirmed during the whole period, and both effects from the occurrence of financial and energy shortage risks generate unstable dependence changes to commodity price index, coal and gas prices, but a stable dependence change to oil prices. However, the stable dependence changes to stock price index and T-bill rate are mainly affected from the occurrence of financial risk; (v) the market risk of carbon market measured by Value at Risk is mainly affected by energy prices, but commodity price index and the T-bill rate also have significant effects on it after the impact of financial risk.},
}
@PhdThesis{樊艳艳2017,
  author   = {樊艳艳},
  title    = {我国碳金融市场中碳排放权交易价格的影响因素分析},
  school   = {山西财经大学},
  year     = {2017},
  abstract = {随着温室效应等诸多生态环境问题的显现,全球各国开始对环境治理给予高度关注,发达国家以及发展中国家在发展经济的同时,也致力于节能减排工作的开展,旨在减少二氧化碳排放,改善空气质量。《京都议定书》的颁布,为建立全球碳金融市场提供了支持,我国作为最大的碳排放主体,完成减排任务责无旁贷。截止2016年底,我国共有7个碳排放权交易试点,2017年将建立全国碳市场,全文也将以此为契机,通过研究碳金融市场中碳排放权交易价格的影响因素,以期逐步完善我国碳排放权交易市场的价格形成机制。本文主要采用理论研究与实证分析相结合的方法,通过对国内外已有文献进行分析和评述,并结合碳交易的相关经济学、环境金融学等理论研究,以及多因素对碳排放权交易价格的影响机理研究,选择煤炭价格指数、石油价格指数、工业指数、空气质量指数、极端气温以及EUA期货价格作为主要影响因素,对碳排放权交易价格的形成进行实证分析。文中选取4个碳交易试点以及各影响因素2016年高频日度数据为样本,运用FGLS模型对碳价格的影响因素进行定量研究。研究表明,煤炭价格波动对碳排放权交易价格有较大影响,空气质量指数和极端低温也对碳排放权交易价格影响显著,同时研究发现,工业指数和EUA期货价格虽然对国内碳价格虽有影响,但其影响较小,而石油价格指数则对我国碳排放权交易价格没有显著影响。最后,通过实证结果的分析,从鼓励技术创新、增强环保意识、积极参与国际碳交易、完善制度体系四方面为我国解决温室效应问题提出建议。本文的创新之处主要体现在指标的选取以及估计模型的选择上,国内学者关于极端气温对碳排放权交易价格的影响鲜有研究,将该指标考虑在内可以提高对碳排放权交易价格形成的解释程度;同时选择FGLS模型来估计方程,突破了之前对时间序列数据的研究方法,得出的结论更具现实意义。},
  keywords = {碳金融;;碳排放权交易市场;;温室效应;;FGLS模型},
}

@Article{胡根华2018,
  author   = {胡根华 and 朱福敏},
  title    = {碳价格波动率模型构建与预测:基于无穷活动率Levy过程},
  journal  = {数理统计与管理},
  year     = {2018},
  volume   = {37},
  number   = {05},
  pages    = {892--903},
  abstract = {考虑碳金融资产价格的跳跃行为特征与杠杆效应,文章选取欧盟碳排放配额现货价格作为研究对象,构建基于无穷活动率Levy过程的碳价格波动率模型并检验其预测效果。首先,假设碳价格不存在跳跃而构建无跳跃的BM-NGARCH模型;然后,假设碳价格的跳跃过程分别服从有限跳跃行为过程与无穷跳跃行为(Variance Gamma过程,Normal Inverse Gaussian过程与Classical Tempered Stable过程)过程,构建MJ-NGARCH模型、VG-NGARCH模型、NIGNGARCH模型和CTS-NGARCH模型等四种Levy波动率模型,并采用基于傅里叶变换的极大似然法估计相关参数;最后,基于上述模型对碳价格进行预测并计算在险价值,进而采用回溯测试方法检验模型的优劣程度。主要研究结果:在5%的显著水平上,BM-NGARCH没有通过尾部检验,而CTS-NGARCH模型在拟合碳价格特征方面具有最佳的拟合效果,说明碳价格存在显著的跳跃行为;在预测方面,BM-NGARCH对碳价格的预测表现最差,而基于无穷活动率Levy过程的碳价格模型都取得较好的预测效果。},
  keywords = {欧盟排放配额;;跳跃;;Levy过程;;在险价值;;回溯测试},
}

@Article{王倩2015,
  author   = {王倩 and 路京京},
  title    = {中国碳配额价格影响因素的区域性差异},
  journal  = {浙江学刊},
  year     = {2015},
  number   = {04},
  pages    = {162--168},
  abstract = {碳配额价格不仅在中国六个碳试点交易所间存在价差,其影响因素亦有显著的区域性差异。由于碳配额的供给曲线人为事先确定,中国碳配额价格波动主要由需求方主导。宏观经济、能源的相对价格以及温度变量都对碳配额价格有显著的影响。在服务业滞后且能源强度大的区域,宏观经济增长与碳价呈正相关关系。而第三产业发展较快的地区,已经实现了经济增长与碳排放的脱钩。化石能源相对价格变动推动的能源替代效应,因各地区能源依赖程度不同而呈现出区域性差异。气候因素也使温度对碳价有不同的影响。为充分发挥碳市场促进企业减排的价格引导机制,中国应努力提高第三产业比重,鼓励碳减排的省际合作,推动以清洁能源替代化石能源,以低碳化石能源替代高碳化石能源。},
  keywords = {碳配额价格;;影响因素;;区域差异},
}

